import React, { useState } from 'react';

const InputExample = () => {
  const [text, setText] = useState('');

  const handleInput = (e) => {
    setText(e.target.value);
  };

  return (
    <div>
      <input type="text" onChange={handleInput} />
      <p>{text}</p>
    </div>
  );
};

export default InputExample;
